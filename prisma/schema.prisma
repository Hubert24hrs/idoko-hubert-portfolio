// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String // Hashed password for admin
  role          String    @default("admin")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Project {
  id            String    @id @default(cuid())
  title         String
  slug          String    @unique
  description   String
  longDescription String?
  category      String    // AI, Data, FullStack
  technologies  String    // JSON array as string
  imageUrl      String?
  liveUrl       String?
  githubUrl     String?
  metrics       String?   // JSON object as string (e.g., accuracy, etc.)
  featured      Boolean   @default(false)
  published     Boolean   @default(true)
  order         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Certification {
  id              String    @id @default(cuid())
  title           String
  issuer          String
  issueDate       DateTime
  expiryDate      DateTime?
  credentialId    String?
  credentialUrl   String?
  logoUrl         String?
  category        String    @default("ai") // Added category
  published       Boolean   @default(true)
  order           Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Testimonial {
  id          String   @id @default(cuid())
  content     String
  author      String
  role        String
  company     String?
  imageUrl    String?
  link        String?
  contact     String?
  published   Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  date      DateTime @default(now())
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id            String    @id @default("settings")
  heroTitle     String    @default("Idoko Hubert")
  heroSubtitle  String    @default("AI & ML Engineer | End-to-End Data Solutions Architect | Full-Stack Mobile & Web Developer")
  aboutContent  String?
  resumeUrl     String?
  linkedinUrl   String?
  githubUrl     String?
  twitterUrl    String?
  kaggleUrl     String?
  mediumUrl     String?
  blogUrl       String?
  facebookUrl   String?
  instagramUrl  String?
  tiktokUrl     String?
  updatedAt     DateTime  @updatedAt
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String
  coverImage  String?
  category    String   @default("tech")
  tags        String[]
  featured    Boolean  @default(false)
  published   Boolean  @default(false)
  author      String?  @default("Idoko Hubert")
  readingTime Int?     @default(5)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
